<?xml version="1.0"?>
<block>
  <name>op25_fsk4_slicer_fb</name>
  <key>op25_fsk4_slicer_fb</key>
  <category>P25</category>
  <import>import op25_repeater</import>
  <make>op25_repeater.fsk4_slicer_fb([$threshold1, $threshold2, $threshold3, $threshold4])</make>

  <param>
    <name>Threshold 1</name>
    <key>threshold1</key>
    <value>-2.0</value>
    <type>real</type>
  </param>

  <param>
    <name>Threshold 2</name>
    <key>threshold2</key>
    <value>0.0</value>
    <type>real</type>
  </param>

  <param>
    <name>Threshold 3</name>
    <key>threshold3</key>
    <value>2.0</value>
    <type>real</type>
  </param>

  <param>
    <name>Threshold 4</name>
    <key>threshold4</key>
    <value>4.0</value>
    <type>real</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
